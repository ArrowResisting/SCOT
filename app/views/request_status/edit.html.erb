<%= form_for @request_status, url: request_status_update_path do |f| %>
  <%= f.hidden_field :id, value: @request_status.id %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %><br>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 7, cols: 100, class: 'form-control'  %><br>
  <%= f.submit %>
<% end %>
