<%= form_for MedicalStatus.new, url: medical_status_create_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %><br>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 7, cols: 100, class: 'form-control'  %><br>
  <%= f.submit %>
  <input type="reset" class="btn btn-danger" value="Cancel" />
<% end %>
