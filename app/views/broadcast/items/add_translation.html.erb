<h1>Add a Translation</h1>
<div class="card border-secondary">
  <div class="card-header border-secondary">
    <strong>English text</strong>
  </div>
  <div class="card-body">
    <%= raw(sanitize(@item.content).gsub "\n", '<br/>') %>
  </div>
</div>
<br/>
<%= form_tag submit_broadcast_translation_path(@item), method: :post do %>
  <div class="field">
    <%= label_tag :translation %><br/>
    <%= text_area_tag :translation, @item.translation, rows: 7, cols: 100, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= submit_tag 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>
